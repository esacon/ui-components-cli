{
    "tabWidth": 4,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5",
    "printWidth": 80,
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "importOrder": [
        "^(react/(.*)$)|^(react$)",
        "^(next/(.*)$)|^(next$)",
        "<THIRD_PARTY_MODULES>",
        "^@/(assets|api|auth|components|constants|content|context|hooks|lib|pages|routes|services|skeletons|stores|styles|templates|types|validations|ui|utils)/?(.*)$",
        "^@/(.*)$",
        "^[./]",
        "^[./].*(?<!\\.(c|le|sc)ss)$",
        "^[.]/[-a-zA-Z0-9_]+[.](module)[.](css|scss|less)$"
    ],
    "importOrderSeparation": false,
    "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
